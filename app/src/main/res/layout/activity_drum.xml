<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:columnCount="5"
    android:orientation="horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="284dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/sticks_button0"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:onClick="sticksS"
            android:text="STICKS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/big_button1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="bigS"
            android:text="BIG"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/medium_button1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="3"
            android:onClick="mediumS"
            android:text="MEDIUM"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/medium_button0"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:onClick="mediumS"
            android:text="MEDIUM"
            app:layout_constraintStart_toEndOf="@+id/medium_button1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/side_button1"
            android:layout_width="60dp"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowSpan="3"
            android:onClick="sideS"
            android:text="SIDE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/big_button0"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:onClick="bigS"
            android:text="BIG"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/small_button1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="4"
            android:onClick="smallS"
            android:text="SMALL"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/small_button0"
            app:layout_constraintTop_toBottomOf="@+id/medium_button1"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/side_button0"
            android:layout_width="60dp"
            android:layout_column="4"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowSpan="3"
            android:onClick="sideS"
            android:text="SIDE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/small_button0"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:onClick="smallS"
            android:text="SMALL"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>




