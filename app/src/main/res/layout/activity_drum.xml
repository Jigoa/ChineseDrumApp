<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steventran.chinesedrumsapp.DrumActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="550dp"
        android:layout_height="643dp"
        android:cropToPadding="false"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212"
        app:srcCompat="@drawable/test_drum_image" />

    <Button
        android:id="@+id/smalldrumbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:background="@drawable/circle_button"
        android:text="small"
        app:layout_constraintBottom_toBottomOf="@+id/bigdrumbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mediumdrumbuttonbutton"
        android:layout_width="174dp"
        android:layout_height="176dp"
        android:background="@drawable/circle_button"
        android:text="medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/smalldrumbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bigdrumbutton"
        android:layout_width="268dp"
        android:layout_height="265dp"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="46dp"
        android:background="@drawable/circle_button"
        android:text="big"
        app:layout_constraintBaseline_toBaselineOf="@+id/sidedrumbutton"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sidedrumbutton"
        android:layout_width="340dp"
        android:layout_height="326dp"
        android:layout_marginBottom="143dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="147dp"
        android:background="@drawable/circle_button"
        android:text="side"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
